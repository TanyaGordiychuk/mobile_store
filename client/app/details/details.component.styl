@import"../variables.styl";

.details
	width 100%
	max-width 960px
	margin 0 auto

.item-details
	&__content
		border 1px solid #313131
		margin 10% auto
		min-height 500px
		display flex
		flex-wrap wrap
		align-items center
	&__image
		height 100%
		max-width 50%
		min-width 290px
		position relative
		>img 
			width 100%
	&__right
		max-width 50%
		min-width 49%

	&__name
		color $baseTextColor
		font-size 30px
		font-weight 700
		margin 5% auto
	&__description
		color $darkRedColor
		text-align justify
	&__price
		text-align end
		
