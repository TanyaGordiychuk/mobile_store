@import"../../variables.styl";

.catalog-item
	color $darkRedColor
	width 100%
	min-height 645px
	&:hover
		box-sizing border-box
		border-radius 4px
		border 2px solid $darkRedColor
	&__image
		width 100%
		position relative
		> img
			width 100%
			box-sizing border-box
			padding 20px 0
	&__name
		box-sizing border-box
		padding 15px 5px
		text-align center
		color $baseTextColor
		font-size 23px
		font-weight 700
	&__description-text
		box-sizing border-box
		padding 15px 5px
		text-align justify
	&__price
		box-sizing border-box
		padding 10px 5px
		text-align center
		font-size 25px
		font-weight 600
	&__controlls
		text-align center
		box-sizing border-box
		padding 10px 5px

.btn-add
		height 40px
		width 200px
		background $darkRedColor
		border none
		border-radius 4px
		color $yellowColor
		font-size 20px
		
